/* This is for the HDK v1.1 - roughly around GDC 2015 */
{
  "server": {
    "sleep": 1
  },
  "plugins": [], /* only need to list manual-load plugins */
  "routes": [
    {
      "destination": "/me/head",
      "source": {
        "rotate": {
          "axis": "x",
          "degrees": 90
        },
        "child": {
          "changeBasis": {
            "x": "-x",
            "y": "-z",
            "z": "y"
          },
          "child": {
            "sensor": 0,
            "tracker": "/com_osvr_Multiserver/OSVRHackerDevKit0"
          }
        }
      }
    }
  ]
}
