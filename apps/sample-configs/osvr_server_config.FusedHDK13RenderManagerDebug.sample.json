{
    "display": "displays/OSVR_HDK_1_3.json",
    "renderManagerConfig": "sample-configs/renderManager.landscape.json",
    "drivers": [{
        "plugin": "com_osvr_VideoBasedHMDTracker",
        "driver": "VideoBasedHMDTracker",
        "params": {
            "cameraID": 0,
            "showDebug": true,
            "blobParams": {
                "minDistBetweenBlobs": 2.0,
                "minArea": 2.0,
                "minCircularity": 0.5,
                "absoluteMinThreshold": 75,
                "minThresholdAlpha": 0.3,
                "maxThresholdAlpha": 0.7,
                "thresholdSteps": 3
            },
            "additionalPrediction": 0.024,
            "maxResidual": 100,
            "initialBeaconError": 0.01,
            "blobMoveThreshold": 15,
            "numThreads": 1,
            "processNoiseAutocorrelation": [1e+2, 5e+1, 1e+2, 5e-1, 5e-1, 5e-1],
            "linearVelocityDecayCoefficient": 0.3,
            "angularVelocityDecayCoefficient": 0.01,
            "includeRearPanel": false,
            "headCircumference": 55.75
        }
    }, {
        "plugin": "org_osvr_filter_videoimufusion",
        "driver": "VideoIMUFusion",
        "params": {
            "name": "HeadFusion",
            "input": {
                "imu": "/com_osvr_Multiserver/OSVRHackerDevKitPrediction0/semantic/hmd",
                "faceplate": "/headSpace"
            },
            "eyeHeight": 1.5
        }
    }],
    "plugins": [
        "com_osvr_VideoBasedHMDTracker"
    ],
    "aliases": {
        "/headSpace": {
            "posttranslate": [0.0, 0.0, 0.075],
            "child": "/com_osvr_VideoBasedHMDTracker/TrackedCamera0_0/semantic/hmd/front"
        },
        "/me/head": "/org_osvr_filter_videoimufusion/HeadFusion/semantic/fused"
    }
}
